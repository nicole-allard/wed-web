<!DOCTYPE html>
%html
  %head
    %title Nicole and Ken
    = stylesheet_link_tag :all
    = csrf_meta_tag
  %body
    .header
      .img-wrapper
        %img.tree{:src=>'/images/tree.png'}
      
      .navigation-hack
        %img.names{:src=>'/images/names.png'}
        .navigation
          .wrapper
            %ul
              %li= link_to "Details", :controller => 'rsvp'
              %li= link_to "Registry", :controller => 'rsvp'
              %li= link_to "Lodging", :controller => 'rsvp'
              %li= link_to "RSVP", :controller => 'rsvp'
              %li= link_to "Plans", :controller => 'rsvp'
              %li= link_to "Flights", :controller => 'rsvp'
              %li= link_to "Map", :controller => 'rsvp'
      
    .main-container
      - if flash && flash.has_key?(:notice_messages)
        - flash[:notice_messages].each do |cls, msg|
          %div{:class => cls}
            = msg
      = yield
      
      
    %script{:src=>'https://ajax.googleapis.com/ajax/libs/jquery/1.8.1/jquery.min.js'}
    %script{:src=>'javascripts/main.js'}

         
     